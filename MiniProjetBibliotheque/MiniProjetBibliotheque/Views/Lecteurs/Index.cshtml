@model IEnumerable<MiniProjetBibliotheque.Models.Lecteur>

@{
    ViewData["Title"] = "Index";
}

<h1>Liste des Lecteurs</h1>

<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Rechercher par Nom ou Prenom: <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />
            <input type="submit" value="Rechercher" class="btn btn-secondary" /> |
            <a class="btn btn-outline-secondary" asp-action="Index">Retour a la Liste complète</a>
        </p>
    </div>
</form>

<p>
    <a class="btn btn-secondary" asp-action="Create">Créer un nouveau lecteur</a>
</p>

@if (TempData["AlertMessage"] != null)
{
    <div class="alert alert-success">
        <strong> Success !</strong> @TempData["AlertMessage"]
    </div>
}
<table class="table">
    <thead>
        <tr>
            <th>
               <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]">@Html.DisplayNameFor(model => model.NomLecteur)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]">@Html.DisplayNameFor(model => model.PrenomLecteur)</a>
            </th>
            <th>
                Email
            </th>
            <th>
                Téléphone
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Adresse)
            </th>
            <th>
                Mot de passe
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomLecteur)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrenomLecteur)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmailLecteur)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TelephoneLecteur)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adresse)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mdp_Lecteur)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.LecteurId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.LecteurId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.LecteurId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
