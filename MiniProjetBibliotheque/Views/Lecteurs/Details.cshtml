@model MiniProjetBibliotheque.Models.Lecteur

@{
    ViewData["Title"] = "Details";
}

<h1 class="display-4">Infos lecteur</h1>

<div>
    <h4>Lecteur</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nom
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomLecteur)
        </dd>
        <dt class = "col-sm-2">
            Prénom
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PrenomLecteur)
        </dd>
        <dt class = "col-sm-2">
            Email
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EmailLecteur)
        </dd>
        <dt class = "col-sm-2">
            Téléphone
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TelephoneLecteur)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Adresse)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Adresse)
        </dd>
        @*<dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Mdp_Lecteur)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Mdp_Lecteur)
        </dd>*@
        <dt class="col-sm-2">
            Emprunts
        </dt>
        <dd class="col-sm-10">
            @foreach (var item in Model.EmpruntsLecteur)
            {
                @Html.DisplayFor(modelItem => item.DateEmprunt)

                <br />
            }
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-outline-dark" asp-action="Edit" asp-route-id="@Model?.LecteurId">Éditer</a> |
    <a asp-action="Index">Retour à la liste</a>
</div>
