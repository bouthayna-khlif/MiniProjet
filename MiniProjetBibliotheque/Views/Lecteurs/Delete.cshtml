@model MiniProjetBibliotheque.Models.Lecteur

@{
    ViewData["Title"] = "Delete";
}

<h1 class="display-4">Supprimer un lecteur</h1>

<h3>Êtes-vous sûr de vouloir supprimer ce lecteur ?</h3>
<div>
    <h4>Lecteur</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NomLecteur)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomLecteur)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PrenomLecteur)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PrenomLecteur)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EmailLecteur)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EmailLecteur)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TelephoneLecteur)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TelephoneLecteur)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Adresse)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Adresse)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Mdp_Lecteur)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Mdp_Lecteur)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="LecteurId" />
        <input type="submit" value="Supprimer" class="btn btn-danger" /> |
        <a asp-action="Index">Retour à la liste</a>
    </form>
</div>
