@model MiniProjetBibliotheque.Models.Domaine

@{
    ViewData["Title"] = "Details";
}

<h1 class="display-4">Détails domaine</h1>

<div>
    <h4>Domaine</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nom
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomDomaine)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            Livres correspondants
        </dt>
        <dd class="col-sm-10">
            @foreach (var item in Model.LivresDomaine)
            {
                @Html.DisplayFor(modelItem => item.Titre)

                <br />
            }
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-outline-dark" asp-action="Edit" asp-route-id="@Model?.DomaineId">Éditer</a> |
    <a asp-action="Index">Retour à la liste</a>
</div>
