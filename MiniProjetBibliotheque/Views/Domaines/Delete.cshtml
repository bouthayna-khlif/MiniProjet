@model MiniProjetBibliotheque.Models.Domaine

@{
    ViewData["Title"] = "Delete";
}

<h1 class="display-4">Supprimer un domaine</h1>

<h3>Êtes-vous sûr de vouloir supprimer ce domaine ?</h3>
<div>
    <h4>Domaine</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NomDomaine)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomDomaine)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="DomaineId" />
        <input type="submit" value="Supprimer" class="btn btn-danger" /> |
        <a asp-action="Index">Retour à la liste</a>
    </form>
</div>
