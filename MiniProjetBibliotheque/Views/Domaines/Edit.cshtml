@model MiniProjetBibliotheque.Models.Domaine

@{
    ViewData["Title"] = "Edit";
}

<h1 class="display-4">Modifier un domaine</h1>

<h4>Domaine</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DomaineId" />
            <div class="form-group mb-3">
                <label class="control-label">Nom</label>
                <input asp-for="NomDomaine" class="form-control" />
                <span asp-validation-for="NomDomaine" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <input type="submit" value="Valider" class="btn btn-dark" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Retour à la liste</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
