@model MiniProjetBibliotheque.Models.Emprunt

@{
    ViewData["Title"] = "Delete";
}

<h1 class="display-4">Supprimer un emprunt</h1>

<h3>Êtes-vous sûr de vouloir supprimer cet emprunt ?</h3>
<div>
    <h4>Emprunt</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateEmprunt)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateEmprunt)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateRetour)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateRetour)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Lecteur)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Lecteur.Mdp_Lecteur)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Livre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Livre.Titre)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="EmpruntId" />
        <input type="submit" value="Supprimer" class="btn btn-danger" /> |
        <a asp-action="Index">Retour à la liste</a>
    </form>
</div>
