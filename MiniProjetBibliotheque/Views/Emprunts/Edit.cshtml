@model MiniProjetBibliotheque.Models.Emprunt

@{
    ViewData["Title"] = "Edit";
}

<h1 class="display-4">Modifier emprunt</h1>

<h4>Emprunt</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EmpruntId" />
            <div class="form-group mb-3">
                <label class="control-label">Lecteur</label>
                <select asp-for="LecteurId" class="form-control" asp-items="ViewBag.LecteurId"></select>
                <span asp-validation-for="LecteurId" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label class="control-label">Livre</label>
                <select asp-for="LivreId" class="form-control" asp-items="ViewBag.LivreId"></select>
                <span asp-validation-for="LivreId" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label class="control-label">Date d'emprunt</label>
                <input asp-for="DateEmprunt" class="form-control" />
                <span asp-validation-for="DateEmprunt" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label class="control-label">Date de retour</label>
                <input asp-for="DateRetour" class="form-control" />
                <span asp-validation-for="DateRetour" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <input type="submit" value="Valider" class="btn btn-dark" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
