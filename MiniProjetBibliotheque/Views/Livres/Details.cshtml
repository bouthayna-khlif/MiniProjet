@model MiniProjetBibliotheque.Models.Livre

@{
    ViewData["Title"] = "Details";
}

<h1 class="display-4">Infos livre</h1>

<div>
    <h4>Livre</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Titre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Titre)
        </dd>
        <dt class = "col-sm-2">
            Nombre de pages
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NombrePages)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Auteur)
        </dt>
        <dd class = "col-sm-10">
            <a asp-controller="Auteurs" asp-action="Details" asp-route-id="@Model?.AuteurId">@Html.DisplayFor(model => model.Auteur.NomAuteur)</a>
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Domaine)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Domaine.NomDomaine)
        </dd>
        <dt class="col-sm-2">
            Emprunts
        </dt>
        <dd class="col-sm-10">
            @foreach (var item in Model.EmpruntsLivre)
            {
                @Html.DisplayFor(modelItem => item.DateEmprunt)

                <br />
            }
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-outline-dark"cla asp-action="Edit" asp-route-id="@Model?.LivreId">Éditer</a> |
    <a asp-action="Index">Retour à la liste</a>
</div>
