@model MiniProjetBibliotheque.Models.Livre

@{
    ViewData["Title"] = "Delete";
}

<h1 class="display-4">Supprimer un livre</h1>

<h3>Êtes-vous sûr de vouloir supprimer ce livre ?</h3>
<div>
    <h4>Livre</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Titre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Titre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NombrePages)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NombrePages)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Auteur)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Auteur.NomAuteur)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Domaine)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Domaine.NomDomaine)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="LivreId" />
        <input type="submit" value="Supprimer" class="btn btn-danger" /> |
        <a asp-action="Index">Retour à la liste</a>
    </form>
</div>
